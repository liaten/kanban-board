<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kanban_menu"
    android:background="@color/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/Profile_kanban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >

        <TextView
            style="@style/View_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textAlignment="center" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_name_kanban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Profile_kanban"
        android:layout_marginBottom="50dp"
        android:background="@color/back_2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="user_login"
            android:textAlignment="center"
            android:textColor="@color/btn_sing_in_stroke"
            android:textSize="35dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/enter_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_kanban"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/LogOut"
            style="@style/Buttons_def"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="@string/log_out" />


    </LinearLayout>








    </LinearLayout>

</ScrollView>